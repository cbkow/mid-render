{
    "_version": 2,
    "template_id": "cinema4d-2026-plugin",
    "name": "Cinema 4D 2026 \u2014 plugin",

    "cmd": {
        "windows": "C:/Program Files/Maxon Cinema 4D 2026/Commandline.exe",
        "linux": "",
        "macos": "/Applications/Maxon Cinema 4D 2026/Commandline.app/Contents/MacOS/Commandline",
        "label": "C4D Commandline Executable",
        "editable": true
    },

    "frame_padding": "####",

    "flags": [
        { "flag": "-nogui", "value": null, "info": "No GUI (must be first)", "editable": false },
        { "flag": "-render", "value": null, "info": "Render flag", "editable": false },
        { "flag": "", "value": "", "id": "scene_file", "info": "Scene File (.c4d)", "editable": true, "required": true, "type": "file", "filter": "c4d" },
        { "flag": "-take", "value": null, "info": "Take flag", "editable": false },
        { "flag": "", "value": "", "id": "take_name", "info": "Take Name (optional)", "editable": true, "required": false },
        { "flag": "-oimage", "value": null, "info": "Output image path flag", "editable": false },
        { "flag": "", "value": "", "id": "output_path", "info": "Output Path", "editable": true, "required": true, "type": "output" },
        { "flag": "-oformat", "value": null, "info": "Output format flag", "editable": false },
        { "flag": "", "value": "", "id": "output_format", "info": "Output Format (optional)", "editable": true, "required": false },
        { "flag": "-threads", "value": null, "info": "Thread count flag", "editable": false },
        { "flag": "", "value": "", "id": "threads", "info": "Thread Count (optional)", "editable": true, "required": false },
        { "flag": "-frame", "value": null, "info": "Frame range flag", "editable": false },
        { "flag": "", "value": "{chunk_start}", "info": "Start frame (runtime)", "editable": false },
        { "flag": "", "value": "{chunk_end}", "info": "End frame (runtime)", "editable": false },
        { "flag": "", "value": "1", "info": "Frame step (every frame)", "editable": false }
    ],

    "job_defaults": {
        "frame_start": 0,
        "frame_end": 90,
        "chunk_size": 10,
        "priority": 50,
        "max_retries": 3,
        "timeout_seconds": null
    },

    "progress": {
        "patterns": [
            {
                "regex": "Progress:\\s*(\\d+)%",
                "type": "percentage",
                "group": 1,
                "info": "C4D progress percentage (Setup/GI/Main Render/Finalize phases)"
            }
        ],
        "completion_pattern": {
            "regex": "Rendering Phase: Finalize",
            "info": "C4D enters Finalize phase after each frame completes rendering"
        },
        "error_patterns": [
            { "regex": "Document not found.*", "info": "Scene file not found" },
            { "regex": "Project not found.*", "info": "Project not found" },
            { "regex": "Error rendering project.*", "info": "Render error" },
            { "regex": "Error loading project.*", "info": "Project load error" },
            { "regex": "Error rendering document.*", "info": "Document render error" },
            { "regex": "Error loading document.*", "info": "Document load error" },
            { "regex": "Rendering failed.*", "info": "Render failed" },
            { "regex": "Asset missing.*", "info": "Missing asset or texture" },
            { "regex": "Invalid License.*", "info": "License failure" },
            { "regex": "Files cannot be written.*", "info": "Output path not writable" },
            { "regex": "Enter Registration Data.*", "info": "Unlicensed installation" }
        ]
    },

    "output_detection": {
        "stdout_regex": null,
        "path_group": 1,
        "validation": "exit_code_only",
        "info": "C4D does not print output file paths to stdout"
    },

    "process": {
        "kill_method": "terminate",
        "working_dir": null
    },

    "environment": {},

    "tags_required": ["c4d"]
}
