{
    "_version": 2,
    "template_id": "cinema4d-2026-all-options",
    "name": "Cinema 4D 2026 \u2014 All Options",

    "cmd": {
        "windows": "C:/Program Files/Maxon Cinema 4D 2026/Commandline.exe",
        "linux": "",
        "macos": "/Applications/Maxon Cinema 4D 2026/Commandline.app/Contents/MacOS/Commandline",
        "label": "C4D Commandline Executable",
        "editable": true
    },

    "frame_padding": "####",

    "flags": [
        { "flag": "-nogui", "value": null, "info": "No GUI (must be first)", "editable": false },
        { "flag": "-render", "value": null, "info": "Render flag", "editable": false },
        { "flag": "", "value": "", "id": "scene_file", "info": "Scene File (.c4d)", "editable": true, "required": true, "type": "file", "filter": "c4d" },
        { "flag": "-take", "value": null, "info": "Take flag", "editable": false },
        { "flag": "", "value": "", "id": "take_name", "editable": true, "info": "Take Name (leave blank for default)",
          "help": "Name of the Take to render. Leave blank to use the scene's active Take." },
        { "flag": "-oimage", "value": null, "info": "Output image path flag", "editable": false },
        { "flag": "", "value": "", "id": "output_path", "info": "Output Path", "editable": true, "required": true, "type": "output",
          "default_pattern": "{project_dir}\\..\\renders\\{file_name}\\{file_name}",
          "help": "Base path for rendered frames. C4D appends frame numbers automatically (e.g. myrender0000.tif)." },
        { "flag": "-omultipass", "value": null, "info": "Multi-Pass output flag", "editable": false },
        { "flag": "", "value": "", "id": "multipass_path", "editable": true, "info": "Multi-Pass Output Path",
          "help": "Override Multi-Pass save location. Frame numbers and pass names added automatically. Leave blank to skip." },
        { "flag": "-oformat", "value": null, "info": "Output format flag", "editable": false },
        { "flag": "", "value": "", "id": "output_format", "editable": true, "info": "Output Format",
          "help": "EXR | TIFF | PNG | JPG | TGA | BMP | HDR | IFF | PICT | PSE | RLA | RPF | B3D | PSP. Leave blank to use scene settings." },
        { "flag": "-oresolution", "value": null, "info": "Resolution override flag", "editable": false },
        { "flag": "", "value": "", "id": "res_width", "editable": true, "info": "Resolution Width",
          "help": "Override render width in pixels. Must set both width and height, or leave both blank to use scene settings." },
        { "flag": "", "value": "", "id": "res_height", "editable": true, "info": "Resolution Height",
          "help": "Override render height in pixels. Must set both width and height, or leave both blank to use scene settings." },
        { "flag": "-threads", "value": null, "info": "Thread count flag", "editable": false },
        { "flag": "", "value": "", "id": "threads", "editable": true, "info": "Thread Count",
          "help": "Number of rendering threads. 0 = optimal (all processors). Leave blank to skip." },
        { "flag": "-redshift-gpu", "value": null, "info": "Redshift GPU affinity flag", "editable": false },
        { "flag": "", "value": "", "id": "redshift_gpu", "editable": true, "info": "Redshift GPU ID",
          "help": "GPU device ID for Redshift rendering (e.g. 0). Repeat flag in custom template for multi-GPU (e.g. 0 and 1). Leave blank to use all GPUs." },
        { "flag": "-frame", "value": null, "info": "Frame range flag", "editable": false },
        { "flag": "", "value": "{chunk_start}", "info": "Start frame (runtime)", "editable": false },
        { "flag": "", "value": "{chunk_end}", "info": "End frame (runtime)", "editable": false },
        { "flag": "", "value": "1", "info": "Frame step (every frame)", "editable": false }
    ],

    "job_defaults": {
        "frame_start": 0,
        "frame_end": 90,
        "chunk_size": 10,
        "priority": 50,
        "max_retries": 3,
        "timeout_seconds": null
    },

    "progress": {
        "patterns": [
            {
                "regex": "Progress:\\s*(\\d+)%",
                "type": "percentage",
                "group": 1,
                "info": "C4D progress percentage (cycles through Setup, GI, Main Render, Finalize phases per frame)"
            }
        ],
        "completion_pattern": {
            "regex": "Rendering Phase: Finalize",
            "info": "C4D enters Finalize phase after each frame completes rendering"
        },
        "error_patterns": [
            { "regex": "Document not found.*", "info": "Scene file not found" },
            { "regex": "Project not found.*", "info": "Project not found" },
            { "regex": "Error rendering project.*", "info": "Render error" },
            { "regex": "Error loading project.*", "info": "Project load error" },
            { "regex": "Error rendering document.*", "info": "Document render error" },
            { "regex": "Error loading document.*", "info": "Document load error" },
            { "regex": "Rendering failed.*", "info": "Render failed" },
            { "regex": "Asset missing.*", "info": "Missing asset or texture" },
            { "regex": "Invalid License.*", "info": "License failure" },
            { "regex": "Files cannot be written.*", "info": "Output path not writable" },
            { "regex": "Enter Registration Data.*", "info": "Unlicensed installation" }
        ]
    },

    "output_detection": {
        "stdout_regex": null,
        "path_group": 1,
        "validation": "exit_code_only",
        "info": "C4D does not print output file paths to stdout; success determined by exit code"
    },

    "process": {
        "kill_method": "terminate",
        "working_dir": null
    },

    "environment": {},

    "tags_required": ["c4d"]
}
